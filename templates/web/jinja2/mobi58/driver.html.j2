{% block content %}


<section class="py-2">
	<div class="container-fluid">
		<h1 class="h3 mb-2 text-gray-800">Driver List</h1>
    	<p class="mb-4">you can add and view list of Driver.</p>
		<div class="row">
			<div class="col-12">
				<div class="card mb-4 border-0">
					<div class="card-body position-relative pl-0 pr-0">
						<div class="card shadow mb-4">
                            <div class="card-header bg-warning py-3">
                                <div class="row w-100 align-items-center">
                                    <div class="col-12 col-md-6">
                                        <h6 class="m-0 font-weight-bold text-black">Driver List</h6>
                                    </div>
                                    <div class="col-12 col-md-6 text-md-right mt-4 mt-sm-0">
                                        <!-- <a href="" class="btn bg-transparent text-black">Add Transporter</a> -->

                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                                            Add Driver
                                          </button>
                                          
                                          <!-- Modal -->
                                          <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                              <div class="modal-content">
                                                <div class="modal-header" style="    background-image: linear-gradient(315deg, #ff4e00 0%, #ec9f05 74%);
                                                ">
                                                  <h5  class="modal-title" id="exampleModalLabel" style="    margin-left: 135px; color:black">ADD Driver</h5>
                                                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                  </button>
                                                </div>
                                                <div class="modal-body">
                                                    <form method="post" enctype="multipart/form-data" action="{{url('add-driver')}}">
                                                        {{csrf_input}}
                                                        <div class="form-row">
                                                          <div class="form-group col-md-12">
                                                            <p class="text-left">Transporter Name</p>
                                                            <select class="form-control" id="exampleFormControlSelect1" name="transporter_name">
                                                            <option selected="">Please choose</option>
                                                            {% for u in alltransporter1  %}
                                                            <option value="{{u.id}}" >{{u.transporter_name}}</option>
                                                            {%endfor%}
                                                            </select>
                                                          </div>
                                                          <div class="form-group col-md-6">
                                                            <p class="text-left">Vehicle</p>
                                                            <select class="form-control" id="exampleFormControlSelect1" name="vehicle">
                                                                <option selected="">Please choose</option>
                                                                {% for u in allvehicle%}
                                                                <option value="{{u.id}}" >{{u.registeration_no}}</option>
                                                                {%endfor%}
                                                                </select>
                                                          </div>
                                                          <div class="form-group col-md-6">
                                                            <p class="text-left">Driver Name</p>
                                                            <input name="driver_name" type="text" class="form-control" id="inputEmail4" placeholder="Driver Name"required>
                                                          </div>
                                                          <div class="form-group col-md-6">
                                                            <p class="text-left">Mobile</p>
                                                            <input name="mobile" type="text" class="form-control" id="inputEmail4" placeholder="Mobile"required>
                                                          </div>
                                                          <div class="form-group col-md-6">
                                                            <p class="text-left">DOB</p>
                                                            <input name="DOB" type="Date" class="form-control" id="inputEmail4"  required>
                                                          </div>
                                                          <div class="form-group col-md-6">
                                                            <p class="text-left">License No. </p>
                                                            <input name="license_no" type="text" class="form-control" id="inputEmail4" placeholder="License No." required>
                                                          </div>
                                                          <div class="form-group col-md-6">
                                                            <p class="text-left">license File</p>
                                                            <input name="license_file" type="file" class="form-control" id="inputEmail4" placeholder="GST No" required>
                                                          </div>
                                                          <div class="form-group col-md-6">
                                                            <p class="text-left">Aadhar No.</p>
                                                            <input name="aadhar_no" type="text" class="form-control" id="inputEmail4" required placeholder="Aadhar No.">
                                                          </div>
                                                          <div class="form-group col-md-6">
                                                            <p class="text-left">Aadhar File</p>
                                                            <input name="aadhar_file" type="file" class="form-control" id="inputEmail4" placeholder="CIN No" required>
                                                          </div>
                                                          <div class="form-group col-md-6">
                                                            <p class="text-left">Address</p>
                                                            <input name="address" type="text" class="form-control" id="inputEmail4" required placeholder="Address">
                                                          </div>
                                                          <div class="form-group col-md-6">
                                                            <p class="text-left">Description</p>
                                                            <input name="description" type="text" class="form-control" id="inputEmail4" required placeholder="Description">
                                                          </div>
                                                         

                                                          </div>
                                                          <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                            <button type="submit" class="btn btn-primary">Submit</button>
                                                          </div>
                                                        </form>
                                                </div>
                                                
                                            
                                              </div>
                                            </div>
                                          </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                    <table id="company" class="table table-border">
                        <thead class="text-center">
                            <tr>
                              <th>S.No.</th>
                                <th>Transporter Name</th>
								<th>Registeration No.</th>
                                <th>Driver Name</th>
                                <th>License No</th>
								
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody class="text-center">  
							{% for data in trans %}  
                            <tr>
                              <td>{{data.id}}</td>
								<td><a href="">{{data.transporter_name}}</a></td>
                                <td>{{data.vehicle}}</td>
                                <td>{{data.driver_name}}</td>
                                <td>{{data.license_no}}</td>
                                <td>
                                    <div class="dropdown show">
                                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </a>													
                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                            <a href="#" data-toggle="modal" data-target="#DetailViewList{{data.id}}" class="dropdown-item" title="View">View</a>    
                                            <a href="#" data-toggle="modal" data-target="#EditCompany{{data.id}}" class="dropdown-item" title="Update">Edit</a>    
                                        </div>
                                    </div>
                                </td>
                            </tr>
							{% endfor %}
                        </tbody>
                    </table>            
                </div>
                    <hr>
					
				</div>
			</div>
		</div>
	</div>
</section>


