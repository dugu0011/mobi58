              <div class="form-group mb-4">
                <label for="company_name">CIN Image</label>
                <input type="text" name="company_name" value="" placeholder="{{data.pan_file}}" class="form-control"
                  readonly>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

</section>
