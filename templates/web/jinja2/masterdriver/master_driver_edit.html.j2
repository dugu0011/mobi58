 {% extends "web/jinja2/base.html.j2" %}
{% block content %}


<!-- Begin Page Content -->
<section class="py-md-5">
	<div class="container-fluid">
		<div class="col-12">
			<div class="card mb-4 border-1">
				<div class="card-header py-3 px-0 align-items-center bg-white border-0">
					<div class="row">
						<div class="col-12">
							<h3 class="m-0 px-3 font-weight-bold text-dark">Driver Edit</h3>
						</div>
					</div>
				</div>
				<form method="post" enctype="multipart/form-data">
				{{csrf_input}}
                
				<div class="card-body px-0 text-dark font-weight-bold">
                    {% for data in driver_edit %}
                    <div class="row mx-0">
                        <div class="col-lg-2 col-md-2 col-sm-12">
                            <div class="form-group mb-4">
                                <label for="name">Name</label>
                                <input type="text" value="{{data.driver_name}}" name="name" id="name"  class="form-control">
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-12">
                            <div class="form-group mb-4">
                                <label for="mobile">Mobile</label>
                                <input type="number" value="{{data.mobile}}" name="mobile" id="mobile" onchange="validate_mobile(this , 'mobile')"  class="form-control mobile-num">
                            </div>
                        </div>
						<div class="col-lg-2 col-md-2 col-sm-12">
                            <div class="form-group mb-4">
                                <label for="license_no">License No.</label>
                                <input type="text" value="{{data.license_no}}" name="license_no" id="license_no"  class="form-control">
                            </div>
                        </div>
						<div class="col-lg-2 col-md-2 col-sm-12">
                            <div class="form-group mb-4">
                                <label for="adhaar_no">Aadhar No.</label>
                                <input type="number" value="{{data.aadhar_no}}" name="adhaar_no" id="adhaar_no"  class="form-control">
                            </div>
                        </div>
						<div class="col-lg-2 col-md-2 col-sm-12">
                            <div class="form-group mb-4">
                                <label for="adhaar_no">Aadhar File</label>
                                <input type="file" value="{{data.aadhar_file}}" name="adhaar_file" id="adhaar_file"  class="form-control">
                            </div>
                        </div>
						<div class="col-lg-2 col-md-2 col-sm-12">
                            <div class="form-group mb-4">
                                <label for="license_file">License File</label>
                                <input type="file" value="{{data.license_file}}" name="license_file" id="license_file"  class="form-control">
                            </div>
                        </div>
                    </div> 
                    {% endfor %}
					<div class="row mx-0 position-relative">
        
						<div class=" col-12 pt-4 text-center">
							<a href="/master-driver-list/?company={{request.GET.company}}" class="btn btn-danger text-white rounded-1">Cancel</a>
							<button type="submit" class="btn bg-gradient-primary text-white rounded-1">Update</button>
						</div>
					</div>
				</div>
				</form>
			</div>
		</div>
	</div>
</section>
<!-- End Here -->

<script src="{{static ('vendor/jquery/jquery.min.js')}}"></script>

<script>
$(".mobile-num").keyup(function(ev){
    var x = $(this).val();
        
    if (x.match(/^0+/)) {
	toastr.error('The first digit should not be 0','Alert')

      $(this).val(x.substr(0,-1));
    }

});
</script>


{% endblock %}
