{% extends "web/jinja2/base.html.j2" %}
{% block content %}
<!-- Begin Page Content -->
<section class="py-md-5">
	<div class="container-fluid">
		<div class="col-12">
			<div class="card mb-4 border-1">
				<div class="card-header py-3 px-0 align-items-center bg-white border-0">
					<div class="row">
						<div class="col-12">
							<h3 class="m-0 px-3 font-weight-bold text-dark">Add User Detail</h3>
						</div>
					</div>
				</div>
				<form method="post" enctype="multipart/form-data">
				{{csrf_input}}
				<div class="card-body px-0">
                    <div class="row mx-0">
					<input type="hidden" value="{{request.GET.company}}" name="company_id">
                        <div class="col-lg-3 col-md-3 col-sm-12">
                            <div class="form-group mb-4">
                                <label for="username">Mobile*</label>
								<small class="text-danger">(Mobile is the username.)</small>
                                <input type="number" name="username" class="form-control" required>
								
                            </div>
                        </div>
						<div class="col-lg-3 col-md-3 col-sm-12">
                            <div class="form-group mb-4">
                                <label for="name">Name*</label>
                                <input type="text" name="name" class="form-control" required>
                            </div>
                        </div>
						<div class="col-lg-3 col-md-3 col-sm-12">
                            <div class="form-group mb-4">
                                <label for="gender">Gender*</label>
                                <select class="form-control" name="gender">
									<option value="male">Male</option>
									<option value="female">Female</option>
									<option value="other">Other</option>
								</select>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-12">
                            <div class="form-group mb-4">
                                <label for="email">Email*</label>
                                <input type="email" id="email" name="email" class="form-control" required>
                            </div>
                        </div>
						<div class="col-lg-3 col-md-3 col-sm-12">
                            <div class="form-group mb-4">
                                <label for="password">Password*</label>
                                <input type="password" id="password" name="password" class="form-control" required>
								<small><input type="checkbox" onclick="displayPassword()"> Show Password</small>
                            </div>
                        </div>
                    </div>
                    <hr>	
					<div class="row mx-0 position-relative">
        
						<div class=" col-12 pt-4 text-center">
							<button type="reset" class="btn btn-white text-dark border rounded-1 bg-white f-s-18 px-4 py-2 mr-3">Reset</button>
							<button type="submit"  class="btn bg-gradient-primary text-white rounded-1 f-s-18 px-4 py-2">Create</button>
						</div>
					</div>
				</div>
				</form>
			</div>
		</div>
	</div>
</section>
<!-- End Here -->

<script src="{{static ('vendor/jquery/jquery.min.js')}}"></script>

<script>
	function displayPassword() {
			var x = document.getElementById('password');
			if (x.type === 'password'){
				x.type = "text";
				} else {
					x.type = 'password';
			}
		}
</script>


{% endblock %}
