{% extends "web/jinja2/base.html.j2" %}
{% block content %}
<!-- Begin Page Content -->
<section class="py-md-5">
	<div class="container-fluid">
		<div class="col-12">
			<div class="card mb-4 border-1">
				<div class="card-header py-3 px-0 align-items-center bg-white border-0">
					<div class="row">
						<div class="col-9">
							<h3 class="m-0 px-3 font-weight-bold text-dark">User</h3>
						</div>
                        <div class="col-3">
							<a href="/create-user/?company={{company_id}}" class="btn btn-primary font-18"><i class="fa fa-plus"></i>Add user</a>
						</div>
					</div>
				</div>
				<div class="card-body px-0">
                    <div class="card-body px-0">
                    <div class="row mx-0">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                    <table id="customer" class="table table-border">
                        <thead class="text-center">
                            <tr>
                                <th>Mobile</th>
                                <th>Email</th>
                                <th>Name</th>
                                <th>Gender</th>
                                <th>Username</th>
                                <th>Password</th>
                                {#<th>Active</th>#}
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody class="text-center">  
							{% for data in users %}  
                            <tr>
								<td>{{data.mobile}}</td>
                                <td>{{data.email}}</td>
                                <td>{{data.name}}</td>
                                <td>{{data.gender}}</td>
                                <td>{{data.username}}</td>
                                <td>{{data.password}}</td>
                                {#<td>{% if data.is_active == True%}Active{%else%}Inactive{%endif%}</td>#}
                                <td>
									<div class="tools">
										<div class="text-right btn-group">
											<button type="button" class="btn btn-box-tool dropdown-toggle" 
													data-toggle="dropdown" aria-expanded="false">
											<i class="fa fa-ellipsis-v"></i>
											</button>
											<ul class="dropdown-menu" role="menu">
												<li><a href="/user-edit/{{data.id}}/?company={{company_id}}" style="color:inherit;"><i class="fa fa-edit"></i>Edit</a>
                                                </li>
												{#<li><a href="#" onclick="return confirm('Are you sure?')"; style="color:inherit;"><i class="fa fa-trash" style=color:red;></i> Delete</a></li>#}
											</ul>
										</div>
									</div>
								</td>
                            </tr>
							{% endfor %}
                        </tbody>
                    </table>            
                </div>
                    <hr>
					
				</div>
			</div>
		</div>
	</div>
</section>
<!-- End Here -->

<script src="{{static ('vendor/jquery/jquery.min.js')}}"></script>


<script>
    $(document).ready(function(){
        $('#customer').DataTable({
        "pagingType": "full_numbers"
        });
        $('dataTables_length').addClass('bs-select');
    });
</script>

{% endblock %}
