{% extends "web/jinja2/base.html.j2" %}
{% block content %}
<section class="bg-white">
	<div class="container">
		<!-- Outer Row -->
		<div class="row justify-content-center">
			<div class="col-xl-8 col-lg-9 col-md-10 col-12">
				<div class="card o-hidden border-0 my-5">
					<div class="card-body p-0">
						<!-- Nested Row within Card Body -->
						<div class="row">
							<div class="col-lg-12">
								<div class="p-5 border">
									<div class="text-center">
										<h1 class="h4 text-black mb-4 font-weight-bold text-dark">Welcome Back!</h1>
									</div>
									<form class="user" method="post" action="{{ url('login') }}" id="loginId" enctype="multipart/form-data">
									{{csrf_input}}
										<div class="form-group">
											<label for="exampleInputEmail1" class="text-dark">Email/Mobile</label>
											<input type="text" name="username" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" fvalidation>
											<span class="text-danger error-msgpass error-msg" id="email_error">{% if username_error %}{{username_error}}{%endif%}</span>

										</div>
										<div class="form-group mb-4">
											<label for="exampleInputEmail1" class="text-dark">Password</label>
											<input type="password" name="password" class="form-control form-control-user" id="exampleInputPassword" fvalidation>
											<span class="text-danger error-msg pass" id="password_error">{% if password_error %}{{password_error}}{%endif%}</span>

										</div>
										<div class="col-12 mt-0">
												<small class="error-form mar-0 text-danger" id="aj_pass">{% if error %}{{error}}{%endif%}</small>
										</div>
										<div class="row">
											<div class="col-12 col-lg-6">
												<button type="submit" id="submit-btn" class="btn bg-gradient-primary btn-user btn-block border text-white f-s-18 text-uppercase">
													Login
												</button>
											</div>
											<div class="col-12 col-lg-6">
												<div class="text-right">
													<p>Don't have a account?<a class="" href="{{url('signup')}}"> Signup</a></p>
													<a class="" href="{{url('forgot-password')}}">Forgot Password?</a>
												</div>
											</div>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>    
	</div>
</section>
