{% extends "web/jinja2/base.html.j2" %}
{% block content %}
<!-- Begin Page Content -->
<section class="py-2">
	<div class="container-fluid">
		<h1 class="h3 mb-2 text-gray-800">Customer List</h1>
    	<p class="mb-4">you can add and view list of Customer.</p>
		<div class="row">
			<div class="col-12">
				<div class="card mb-4 border-0">
					<div class="card-body position-relative pl-0 pr-0">
						<div class="card shadow mb-4">
                            <div class="card-header bg-warning py-3">
                                <div class="row w-100 align-items-center">
                                    <div class="col-12 col-md-6">
                                        <h6 class="m-0 font-weight-bold text-black">Customer List</h6>
                                    </div>
                                    <div class="col-12 col-md-6 text-md-right mt-4 mt-sm-0">
                                        <a href="/create-customer/?company={{company_id}}" class="btn bg-transparent text-black">Add Customer</a>
                                    </div>
                                </div>
                            </div>
                        <div class="card-body">
                            <table class="table" id="dataTable" width="100%" cellspacing="0">
                                <thead class="text-center">
                                    <tr>
                                        <th>Customer Name</th>
                                        <th>Customer Type</th>
                                        <th>Category</th>
                                        <th>Email</th>
                                        <th>Mobile</th>
                                        <th>Pan No.</th>
                                        <th>Remark</th>
                                    </tr>
                                </thead>
                                <tbody class="text-center">  
                                    {% for data in customer %}  
                                    <tr>
                                        <td>{{data.customer_name}}</td>
                                        <td>{{data.customer_type|title}}</td>
                                        <td>{{data.customer_category|title}}</td>
                                        <td>{{data.email}}</td>
                                        <td>{{data.mobile}}</td>
                                        <td>{{data.pan_no}}</td>
                                        <td>{{data.remark}}</td>
                                        {#<td>
                                            <div class="tools">
                                                <div class="text-right btn-group">
                                                    <button type="button" class="btn btn-box-tool dropdown-toggle" 
                                                            data-toggle="dropdown" aria-expanded="false">
                                                    <i class="fa fa-ellipsis-v"></i>
                                                    </button>
                                                    <ul class="dropdown-menu" role="menu">
                                                        <li><a href="#" style="color:inherit;"><i class="fa fa-edit"></i>Edit</a>
                                                        </li>
                                                        <li><a href="#" onclick="return confirm('Are you sure?')"; style="color:inherit;"><i class="fa fa-delete"></i>Delete</a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>#}
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>            
                        </div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- End Here -->

<script src="{{static ('vendor/jquery/jquery.min.js')}}"></script>


<script>
    $(document).ready(function(){
        $('#customer').DataTable({
        "pagingType": "full_numbers"
        });
        $('dataTables_length').addClass('bs-select');
    });
</script>


{% endblock %}
